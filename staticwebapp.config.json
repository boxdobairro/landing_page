{
  "routes": [
    {
      "route": "/api/*",
      "methods": [ "POST" ],
      "rewrite": "/api/{*}"
    }
  ],
  "globalHeaders": {
    "content-type": "application/json"
  },
  "responseOverrides": {
    "400": {
      "rewrite": "/index.html",
      "statusCode": 400
    },
    "404": {
      "rewrite": "/index.html",
      "statusCode": 404
    }
  }
}
